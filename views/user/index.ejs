<div class="container" ng-controller="UserController">
    <h3>Users</h3>
    <table class='table'>
        <tr>
            <th></th>
            <th>ID</th>
            <th>Name</th>
            <th>Title</th>
            <th>Email</th>
            <th>
            <th>
            <th>
        </tr>

        <tr ng-repeat="user in users" >

            <td><img ng-src="/images/icon-{{loginStatus(user)}}.png"></td>
            <td>{{user.id}}</td>
            <td>{{user.name}}</td>
            <td>{{user.title}}</td>
            <td>{{user.email}}</td>
            <td><img ng-src="/images/{{roleIcon(user)}}.png"></td>
            <td><a href="/user/show/{{user.id}}" class="btn btn-sm btn-primary">Show</a></td>
            <td><a href="/user/edit/{{user.id}}" class="btn btn-sm btn-warning">Edit</a></td>
            <td><a href="/user/destroy/{{user.id}}" class="btn btn-sm btn-danger">Delete</a></td>
        </tr>
    </table>
</div>