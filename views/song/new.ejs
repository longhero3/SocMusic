<form action="/song/create" method="POST" class="form-signin" id="signup-form">
    <% if (flash && flash.err) { %>
        <ul class="alert alert-success">
    <% Object.keys(flash.err).forEach(function(error){ %>
            <li><%- JSON.stringify(flash.err[error])%></li>
    <%    })%>
    </ul>
    <% } %>

    <h2 class="form-signin-heading">Create a song</h2>
    <input type="text" class="form-control" placeholder="Song name" name="name">
    <input type="text" class="form-control" placeholder="Singer" name="singer">
    <input type="file" class="form-control" placeho lder="File" name="file">
    <br />
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Song"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>