<div class="song-view" ng-controller="SongController" ng-init="init()">
  <div class="col-md-4 gray sidebar">
    <div class="current-song" ng-switch on="isSongSelected()">
      <div ng-switch-when="false">
          Select a song to play!
      </div>
      <div ng-switch-when="true">
        <div class="singer-avatar">
          <img src="/images/kitten.png"/>
          <h2 class="singer-name">{{currentSong.singer}}</h2>
        </div>
        <div id="currentSongPlayer" class="jp-jplayer"></div>
      </div>
      <div id="jp_container_1" class="jp-audio" ng-class="playerShownClass()">
        <div class="jp-type-single">
          <div class="jp-gui jp-interface">
            <ul class="jp-controls">
              <li><a href="javascript:;" class="jp-play" tabindex="1">play</a></li>
              <li><a href="javascript:;" class="jp-pause" tabindex="1">pause</a></li>
              <li><a href="javascript:;" class="jp-stop" tabindex="1">stop</a></li>
              <li><a href="javascript:;" class="jp-mute" tabindex="1" title="mute">mute</a></li>
              <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="unmute">unmute</a></li>
              <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="max volume">max volume</a></li>
            </ul>
            <div class="jp-progress">
              <div class="jp-seek-bar">
                <div class="jp-play-bar"></div>
              </div>
            </div>
            <div class="jp-volume-bar">
              <div class="jp-volume-bar-value"></div>
            </div>
            <div class="jp-time-holder">
              <div class="jp-current-time"></div>
              <div class="jp-duration"></div>
              <ul class="jp-toggles">
                <li><a href="javascript:;" class="jp-repeat" tabindex="1" title="repeat">repeat</a></li>
                <li><a href="javascript:;" class="jp-repeat-off" tabindex="1" title="repeat off">repeat off</a></li>
              </ul>
            </div>
          </div>
          <div class="jp-details">
            <ul>
              <li><span class="jp-title"></span></li>
            </ul>
          </div>
          <div class="jp-no-solution">
            <span>Update Required</span>
            To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <!--<div class="sort-buttons">-->
      <!--<div class="btn btn-default sort" data-sort="order:asc"> Ascending </div>-->
      <!--<div class="btn btn-default sort" data-sort="order:desc"> Descending </div>-->
      <!--<div class="btn btn-default sort" data-sort="random"> Random </div>-->
    <!--</div>-->
    <ul class="songs">
      <li ng-repeat="song in songs" class="mix song" data-order="{{songRank(song)}}" ng-click="playSong(song)" >
        <div class="name-and-singer">{{song.name}} - {{song.singer}}</div>
        <div class="view">
          <div class="view-back">
            <span datacon="A">{{song.playCount}}</span>
            <span data-icon="B">15</span>
          </div>
          <div class="slice s1">
            <span class="overlay"></span>
            <div class="slice s2">
              <span class="overlay"></span>
              <div class="slice s3">
                <span class="overlay"></span>
                <div class="slice s4">
                  <span class="overlay"></span>
                  <div class="slice s5">
                    <span class="overlay"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>